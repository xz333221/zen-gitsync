{
  "name": "zen-gitsync",
  "version": "1.2.2",
  "description": "控制台输入g，回车，输入提交内容，自动执行git add+commit+push",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "g": "node ./src/gitCommit.js",
    "g:y": "node ./src/gitCommit.js -y",
    "g:y:interval": "node ./src/gitCommit.js -y --interval",
    "g:y:interval60": "node ./src/gitCommit.js --interval=60"
  },
  "files": [
    "src/gitCommit.js",
    "src/utils/index.js",
    "package.json"
  ],
  "bin": {
    "g": "./src/gitCommit.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xz333221/zen-gitsync.git"
  },
  "keywords": [],
  "author": "",
